{
  "name": "Tick",
  "description": "tracks and eliminates procrastination",
  "version": "1.0",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],
  "background":{
    "scripts":["background.js"],
    "persistent": false
  },
  "manifest_version": 2,

  //"installation_popup" : "installation_popup.html",

  "browser_action": {
    "default_popup": "main_popup.html",
    "default_title": "Tick",
    "default_icon": {
      "16": "16Tick.png",
      "32": "32Tick.png",
      "48": "48Tick.png",
      "128": "128Tick.png"
    }
  },
  "icons": {
    "16": "16Tick.png",
    "32": "32Tick.png",
    "48": "48Tick.png",
    "128": "128Tick.png"
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://kit.fontawesome.com/ae925b228c.js; object-src 'self'"
}
